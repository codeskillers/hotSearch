.NewdateDetail
    width 100%
    height 50rem
    position relative
    .hotDot
        width 100%
        height 2rem
        line-height 2rem
        color #8D8D8D
        padding-left 0.8rem
        &:after
            width 1rem
            height 1rem
            display block
            content ""
            position relative
            background url('../../static/images/hotDot.png')
            left 2.3rem
            top  -1.55rem
    .top
        width 100%
        height 0.6rem
        background-color #EEEEEE
    .outWrapper
        height 50rem
        overflow hidden
        .detail-one
            height 70rem
            .detail
                position relative
                .detail-avatar
                    width 4.2rem
                    height 4.2rem
                    margin-top .6rem
                    margin-left .6rem
                    .avatarImg
                        width 4.2rem
                        height 4.2rem
                        border-radius 50%
                .detail-nickname
                    position absolute
                    left 5.5rem
                    top 0.05rem
                    color #FE8400
                    letter-spacing 1px
                .detail-from
                    font-size 0.7rem
                    color gray
                    position absolute
                    left 5.5rem
                    top 1.3rem
                .detail-text
                    width 90%
                    margin-left 1rem
                    margin-top .8rem
                    font-size 0.9rem
                .detail-imgs
                    margin-left 1rem
                    .detail-img
                        width 6rem
                        height 6rem
                        display inline-block
                        margin 0.1rem
                        .detail-img_one
                            width 6rem
                            height 6rem
                        
                .detail-bottom
                    position relative
                    display flex
                    justify-content space-around
                    align-items center
                    font-size 0.9rem
                    .bottom-share
                        position relative
                        color gray
                        &:before
                            width 1rem
                            height 1rem
                            content ""
                            display block
                            position absolute
                            background url('../../static/images/share.png')
                            right 1.8rem
                            top 0.13rem
                    .bottom-comment
                        position relative
                        color gray
                        &:before
                            width 1rem
                            height 1rem
                            content ""
                            display block
                            position absolute
                            background url('../../static/images/comment.png')
                            right 2.1rem
                            top 0.15rem
                    .bottom-good
                        position relative
                        color gray
                        &:before
                            width 1rem
                            height 1rem
                            content ""
                            display block
                            position absolute
                            background url('../../static/images/good.png')
                            right .9rem
                            top 0.12rem


